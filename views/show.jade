extends layout
block content

  div.navbar.clearfix
    div.navbar-inner
      ul.nav
        li
          a(href="/sandbox/?src="+image.src)
            i.icon.icon-pencil
            |  Open in Infragram Sandbox &raquo;
        li: a(onClick="$('#final').toggle();$('#original').toggle();") See original

  div
    img#final(src="../upload/"+image.src)
    
    div.body= image.desc
    br
    div.meta
        span.author= "by "+(image.author || "anon")
        span.updated_at= " on "+image.updated_at

  hr 
  h4 Command log

  form.form
    label Current command
    input(type="text" value=image.log[image.log.length-1])
    label Full command log
    textarea#log.span6(rows=10)= image.log
